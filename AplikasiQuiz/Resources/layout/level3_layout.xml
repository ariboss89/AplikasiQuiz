<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/linUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:backgroundTint="@color/colorBlue"
        android:padding="7dp">

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:paddingLeft="30dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="SOAL PERTANYAAN LEVEL 2"/>

            

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgRambu"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/traffic"/>

        <TextView
            android:id="@+id/txtSoal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edge"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:textStyle="bold"
            android:gravity="center_horizontal|center_vertical"
            android:autoSizeStepGranularity="2sp"
            android:text="Sebutkan nama nama rambu yang cool ini apa yach ?"
            android:textColor="@color/colorWhite"/>

        </LinearLayout>

   <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtA"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"
            android:text="a."/>

        <TextView
            android:gravity="center"
            android:id="@+id/txtIsiA"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/colorBlue"
            android:text="-"
            android:layout_toRightOf="@+id/txtA"/>

        <TextView
            android:id="@+id/txtB"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"
            android:text="b."
            android:layout_below="@+id/txtA"/>

        <TextView
            android:id="@+id/txtIsiB"
            android:layout_width="match_parent"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:textColor="@color/colorBlue"
            android:text="-"
            android:layout_toRightOf="@+id/txtB"
            android:layout_below="@+id/txtIsiA"/>

        <TextView
            android:id="@+id/txtC"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="50dp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"
            android:text="c."
            android:layout_below="@+id/txtB"/>

        <TextView
            android:id="@+id/txtIsiC"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"
            android:textColor="@color/colorBlue"
            android:text="-"
            android:layout_toRightOf="@+id/txtC"
            android:layout_below="@+id/txtIsiB"/>

        <TextView

            android:id="@+id/txtD"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="50dp"
            android:textColor="@color/colorBlue"
            android:textStyle="bold"
            android:text="d."
            android:layout_below="@+id/txtC"/>

        <TextView
            android:padding="1dp"
            android:id="@+id/txtIsiD"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"
            android:textColor="@color/colorBlue"
            android:text="-"
            android:layout_toRightOf="@+id/txtC"
            android:layout_below="@+id/txtIsiC"/>


    </RelativeLayout>

    </ScrollView>   
</LinearLayout>

