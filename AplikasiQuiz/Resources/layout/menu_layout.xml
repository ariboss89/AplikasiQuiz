<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
            android:backgroundTint="@color/colorBlue"
        android:padding="7dp"    >

            <TextView
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="MENU"/>

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbars="vertical"
            >

            <GridLayout
                android:layout_gravity="center_vertical"
                android:padding="16dp"
                android:rowCount="3"
                android:columnCount="2"
                android:foregroundGravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:layout_marginBottom="10dp"
            >

            <!--Row One-->

            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="142dp"
                android:elevation="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/safety"/>

                        <View
                            android:background="#e2e2e2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:padding="2dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:text="Cara Aman Selamat di Sekolah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="142dp"
                android:elevation="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/sign"/>

                        <View
                            android:background="#e2e2e2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:padding="2dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:text="Mengenal Pentingnya Rambu Lalu Lintas "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!--Row Two-->

             <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="142dp"
                android:elevation="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/task"/>

                        <View
                            android:background="#e2e2e2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:padding="2dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:text="Soal Pertanyaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="142dp"
                android:elevation="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/download"/>

                        <View
                            android:background="#e2e2e2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:padding="2dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:text="Download Materi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!--Row Three-->

             <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="142dp"
                android:layout_marginRight="10dp"
                android:elevation="2dp"
                android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/profile"/>

                        <View
                            android:background="#e2e2e2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:padding="2dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:text="Profil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="142dp"
                android:layout_marginLeft="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/help"/>

                        <View
                            android:background="#e2e2e2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:padding="2dp"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:text="Bantuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


            </androidx.cardview.widget.CardView>

            </GridLayout>

        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.6"
            android:layout_height="0dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnCara"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/edge"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/safety"
                android:textColor="@color/colorWhite"
                android:text="Cara AMAN DAN SELAMAT DI SEKOLAH"/>
            <Button
                android:id="@+id/btnMengenal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/edge"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/sign"
                android:textColor="@color/colorWhite"
                android:text="MENGENAL PENTINGNYA RAMBU LALU LINTAS"/>
            <Button
                android:id="@+id/btnSoal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/edge"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/safety"
                android:text="SOAL PERTANYAAN"/>
            <Button
                android:id="@+id/btnMateri"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/edge"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/safety"
                android:text="DOWNLOAD MATERI"/>
            <Button
                android:id="@+id/btnProfil"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/edge"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/safety"
                android:textColor="@color/colorWhite"
                android:text="PROFIL"/>
            <Button
                android:id="@+id/btnBantuan"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/edge"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/help"
                android:textColor="@color/colorWhite"
                android:text="BANTUAN"/>

     </LinearLayout>

        <!--<ImageView
            android:id="@+id/imgArrow"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.05"
            android:src="@drawable/arrow"/>-->

       
</LinearLayout>

