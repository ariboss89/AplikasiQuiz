<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
        android:padding="20dp"
            android:background="@color/colorBlue"
            >

            <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/lantas"/>

        <TextView
            android:gravity="center_horizontal"
            android:textColorHint="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENILAIAN"/>

            </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:gravity="center"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtBenar"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:text="Yang Benar"/>

         <TextView
            android:gravity="center_horizontal"
            android:id="@+id/txtNilaiBenar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:layout_toRightOf="@id/txtBenar"
            android:text="-"/>

         <TextView
            android:id="@+id/txtSalah"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBenar"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:text="Yang Salah"/>

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/txtNilaiSalah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:layout_toRightOf="@id/txtSalah"
            android:layout_below="@id/txtNilaiBenar"
            android:text="-"/>

        <TextView
            android:id="@+id/txtSkor"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSalah"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:text="Nilai Anda"/>

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/txtNilaiSkor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:layout_toRightOf="@id/txtSkor"
            android:layout_below="@id/txtNilaiSalah"
            android:text="-"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtKet"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edge"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="14sp"
        android:autoSizeStepGranularity="2sp"
        android:text="-"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btnMainMenu"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="KEMBALI KE HALAMAN UTAMA"/>

</LinearLayout>

