<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:backgroundTint="@color/colorBlue"
            android:padding="7dp"    >

            <TextView
                android:gravity="center_horizontal"
                android:textColorHint="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="ADMIN MENU"/>

            </LinearLayout>
        </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#dbdbdb"
        android:orientation="vertical"
        android:weightSum="4"
        android:gravity="center_vertical">

         <LinearLayout
            android:id="@+id/linInformasi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            >

            <LinearLayout
                android:id="@+id/linKelolaInformasi"
                android:layout_weight="0.48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iconinformation"/>

            <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

             <TextView
                android:padding="2dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Kelola Informasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

          </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linKelolaSoal"
                android:layout_weight="0.48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iconquestion"/>

            <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

             <TextView
                android:padding="2dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Kelola Soal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

          </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"/>

            <LinearLayout
                android:id="@+id/linKelolaMateri"
                android:layout_width="0dp"
                android:layout_weight="0.48"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iconfile"/>

            <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

             <TextView
                android:padding="2dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Kelola Materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

          </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linKelolaPengguna"
                android:layout_weight="0.48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"/>

            <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

             <TextView
                android:padding="2dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Kelola Pengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

          </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"/>

            <LinearLayout
                android:id="@+id/linKelolaPassword"
                android:layout_width="0dp"
                android:layout_weight="0.48"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iconupdate"/>

            <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

             <TextView
                android:padding="2dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Ubah Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linExit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            >

            <LinearLayout
                android:layout_weight="0.48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logout"/>

            <View
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

             <TextView
                android:padding="2dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Keluar Aplikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

          </LinearLayout>

        </LinearLayout>

     </LinearLayout>



</LinearLayout>

