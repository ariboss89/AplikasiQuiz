<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
		android:layout_gravity="center_vertical"
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:background="@color/colorAccent"
		android:elevation="4dp"
        android:padding="10dp"
		android:layout_height="?android:attr/actionBarSize">

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:weightSum="1">

		    <ImageView
			    android:src="@drawable/arrow"
			    android:layout_width="wrap_content"
			    android:layout_height ="wrap_content"
			    android:id="@+id/imgArrow"
                android:paddingLeft="-20dp"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="CARA SELAMAT SEKOLAH"
                />

        </LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="- Cara adalah suatu bentuk system untuk melakukan sesuatu hal."
            />

        <TextView
            android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="- Aman adalah bebas dari bahaya, bebas dari gangguan, terlindungi, tidak merasa takut atau khawatir."
            />

        <TextView
            android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="- Selamat adalah suatu keadaan terhindar dari bahaya, tidak mendapat gangguan, dan dalam keadaan baik tanpa kekurangan sesuatu apapun."
            />

        <TextView
            android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="- Keselamatan lalu lintas adalah suatu keadaan terhindarnya setiap orang dari risiko kecelakaan selama berlalu lintas yang disebabkan manusia, kendaraan, jalan, dan lingkungan."
            />

        <TextView
            android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="- Bersekolah adalah kegiatan berangkat ke sekolah dengan tujuan untuk mendapatkan pembelajaran atau Pendidikan."/>

        <TextView
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="- Maka cara aman dan selamat bersekolah adalah program arahan kepada keselamatan dan keamanan anak – anak berangkat dan pulang sekolah baik diperjalanan maupun dilingkungan sekolah."
            />

    </LinearLayout>
    
</LinearLayout>

